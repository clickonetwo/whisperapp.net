{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "jsx": "react",

    /* Modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",

    /* Emit */
    "sourceMap": true,
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
